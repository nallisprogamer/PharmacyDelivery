<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_rowmedicineitem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:theme="@style/Theme.AppCompat"
    android:background="@android:color/transparent"
    android:layout_marginBottom="5dp"
    android:paddingEnd="7dp"
    android:paddingStart="7dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pills"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Rozvel"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/Quant_per_cx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"

        android:text="20cp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/name_modelo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Ez Tablet 10´s"
        android:textColor="#506d85"
        app:layout_constraintStart_toEndOf="@+id/name_medicine"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nome_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:text="Sun Pharma"
        android:textColor="#506d85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_medicine" />

    <TextView
        android:id="@+id/nome_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"

        android:text="R$ 500"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_factory" />
    <!--no adapter fazer essas configurações -->
    <!--    -->
    <TextView
        android:id="@+id/nome_value_no_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="R$ 400"
        android:textColor="#506d85"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/nome_value"
        app:layout_constraintTop_toTopOf="@+id/nome_value"

        />

</androidx.constraintlayout.widget.ConstraintLayout>